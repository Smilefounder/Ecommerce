@model Kooboo.Commerce.Activities.InvoiceReminder.InvoiceReminderSettings
@{
    Layout = "~/Areas/Commerce/Views/Shared/AddIns/_ActivitySettings.cshtml";
    ViewBag.Title = "Activity Settings".Localize();
}

<div class="common-form">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <table>
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.SubjectTemplate)</th>
                    <td>
                        @Html.TextBoxFor(m => m.SubjectTemplate)
                        @Html.ValidationMessageFor(m => m.SubjectTemplate)
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.BodyTemplate)</th>
                    <td>
                        @Html.TextAreaFor(m => m.BodyTemplate)
                        @Html.ValidationMessageFor(m => m.BodyTemplate)
                    </td>
                </tr>
            </tbody>
        </table>
        <p class="buttons">
            <button type="submit" data-ajaxform="">@("Save".Localize())</button>
            <a href="#" class="button gray J_Cancel">@("Cancel".Localize())</a>
        </p>
    }
</div>

<script>
    $('.J_Cancel').on('click', function () {
        window.parent.ViewModel.activityContext().cancel();
    });
</script>