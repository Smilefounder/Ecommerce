@model Language

@using (Html.BeginForm())
{
    <table>
        @if (ViewBag.IsEditing == true)
        {
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <td>
                    @Model.Name
                </td>
            </tr>
        }
        else
        {
            @Html.EditorFor(m => m.Name)
        }
        @Html.EditorFor(m => m.DisplayName)
    </table>
}
