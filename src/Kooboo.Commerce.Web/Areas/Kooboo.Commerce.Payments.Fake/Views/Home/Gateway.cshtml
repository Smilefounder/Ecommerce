@model Kooboo.Commerce.Payments.Fake.Models.GatewayViewModel
@{
    ViewBag.Title = "Kooboo Commerce Fake Payment Gateway".Localize();
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <style type="text/css">
        body {
            font-family: 'Segoe UI', 'Microsoft YaHei', sans-serif;
        }

        h1 {
            margin: 0;
            line-height: 1.7em;
            font-size: 18px;
            padding-bottom: 5px;
            border-bottom: #ddd 1px solid;
        }

        .container {
            max-width: 500px;
            margin: 150px auto 0;
        }

        .btn {
            display: inline-block;
            border: #ccc 1px solid;
            background: #eee;
            text-decoration: none;
            padding: 5px 15px;
            color: #666;
            box-shadow: rgba(0, 0, 0, .3) 0 1px 2px;
        }
            .btn:hover {
                background: #fff;
                color: #333;
                -moz-transition: background-color .2s linear;
                -o-transition: background-color .2s linear;
                -webkit-transition: background-color .2s linear;
                transition: background-color .2s linear;
            }

            .buttons {
                padding-top: 20px;
            }

            .payment-info {
                padding: 20px 10px;
                line-height: 1.7em;
            }

            .payment-info label {
                display: inline-block;
            }

            .price {
                font-size: 24px;
                color: #090;
                font-style: normal;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewBag.Title</h1>

        <div class="payment-info">
            <label>Amount:</label> <em class="price">@Model.Amount.ToString("f2")</em> @Model.Currency
        </div>

        <div class="buttons">
            <a class="btn" href="@Url.Action("FakeSuccess", RouteValues.From(Request.QueryString).Merge(new { orderId = Model.OrderId, commerceReturnUrl = Model.CommerceReturnUrl }))">Make Payment Succeeded</a>
            <a class="btn" href="@Url.Action("FakeFailure", RouteValues.From(Request.QueryString).Merge(new { orderId = Model.OrderId, commerceReturnUrl = Model.CommerceReturnUrl }))">Make Payment Failed</a>
        </div>
    </div>
</body>
</html>


