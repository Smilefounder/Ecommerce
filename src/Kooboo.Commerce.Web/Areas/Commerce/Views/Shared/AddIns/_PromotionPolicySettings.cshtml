@{
    Layout = "~/Views/Shared/Blank.cshtml";

    if ((ViewBag.Title as string) == null)
    {
        ViewBag.Title = "Promotion Policy".Localize();
    }

    var promotionId = ViewContext.RouteData.Values["id"];
}

@section Panel {

    @if (IsSectionDefined("Panel"))
    {
        @RenderSection("Panel")
    }
    else
    {
        @Html.HeaderPanel().Buttons(buttons => buttons.AddCancelButton())
    }
}

<div class="block">
    @Html.Action("Steps", "Promotion", new { area = "Commerce", step = 2 })
    @RenderBody()
    <div class="wizard-buttons">
        <a class="button gray" href="@Url.Action("BasicInfo", "Promotion", RouteValues.From(Request.QueryString).Merge("area", "Commerce").Merge("id", promotionId))">@("Back".Localize())</a>
        <a class="button" data-ajaxform="">@("Next".Localize())</a>
    </div>
</div>
