@model CountryEditorModel

@using (Html.BeginForm("Save", "Country", RouteValues.From(Request.QueryString)))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.Id)
    <div class="common-form">
        <table>
            @Html.EditorFor(m => m.Name, new { HtmlAttributes = new { @class = "medium" } })
            @Html.EditorFor(m => m.ThreeLetterISOCode, new { HtmlAttributes = new { @class = "medium" } })
            @Html.EditorFor(m => m.TwoLetterISOCode, new { HtmlAttributes = new { @class = "medium" } })
            @Html.EditorFor(m => m.NumericISOCode, new { HtmlAttributes = new { @class = "medium" } })
        </table>
    </div>
}