@using Newtonsoft.Json;
@using Kooboo.Commerce.Locations;
@using Kooboo.Commerce.Orders;
@model OrderAddress
@{
}
@if (Model == null)
{
    <div>@("NONE".Localize())</div>
}
else
{ 
<table>
    <tbody>
        <tr>
            <th>
                <label>
                    @("First name".Localize())
                </label>
            </th>
            <td>
                @Model.FirstName
            </td>
        </tr>
        <tr>
            <th>
                <label>
                    @("Last name".Localize())
                </label>
            </th>
            <td>
                @Model.LastName
            </td>
        </tr>
        <tr>
            <th>
                <label>
                    @("Phone number".Localize())
                </label>
            </th>
            <td>
                @Model.Phone
            </td>
        </tr>
        <tr>
            <th>
                <label>
                    @("Country".Localize())
                </label>
            </th>
            <td>
                @Model.Country.Name
            </td>
        </tr>
        <tr>
            <th>
                <label>
                    @("State".Localize())
                </label>
            </th>
            <td>
                @Model.State
            </td>
        </tr>
        <tr>
            <th>
                <label>
                    @("City".Localize())
                </label>
            </th>
            <td>
                @Model.City
            </td>
        </tr>
        <tr>
            <th>
                <label>
                    @("Postcode".Localize())
                </label>
            </th>
            <td>
                @Model.Postcode
            </td>
        </tr>
        <tr>
            <th>
                <label>
                    @("Address1".Localize())
                </label>
            </th>
            <td>
                @Model.Address1
            </td>
        </tr>
        <tr>
            <th>
                <label>
                    @("Address2".Localize())
                </label>
            </th>
            <td>
                @Model.Address2
            </td>
        </tr>
    </tbody>
</table>
}