@model PagedList<PaymentMethodRowModel>
@{
    ViewBag.Title = "Payment methods".Localize();
}

@section Panel {
    @(Html.HeaderPanel().Buttons(buttons =>
    {
        buttons.AddCreateButton().WithUrl(Url.Action("BasicInfo", RouteValues.From(Request.QueryString).Merge("return", Request.RawUrl)));
        buttons.AddEnableButton();
        buttons.AddDisableButton();
        buttons.AddAjaxPostButton("Settings", "setting", "Settings", new { @return = Request.RawUrl })
               .VisibleWhen(GridChecked.Single)
               .VisibleWhenSelected(".configurable");
        buttons.AddDeleteButton();
    }))
}

@Html.GridFor2(typeof(PaymentMethodRowModel), Model)

<div class="pagination right">
    @Html.Pager(Model, "", ViewContext.RequestContext.AllRouteValues(), null)
</div>