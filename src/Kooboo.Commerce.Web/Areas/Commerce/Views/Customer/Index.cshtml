@using Kooboo.Commerce.Customers
@using Kooboo.Commerce.Web.Framework.Actions
@{
    ViewBag.Title = "Customers".Localize();
}

@section Panel {
    @(Html.HeaderPanel().Buttons(buttons =>
    {
        buttons.AddCreateButton();
        buttons.AddDeleteButton();
        buttons.AddEntityActions(Actions.GetActions(typeof(Customer)));
    }))
}

@section Topbar {
    <h1 class="title">@ViewBag.Title</h1>
    <div class="search-panel">
        @Html.Partial("_Search")
    </div>
}

@Html.Partial("_QueryGrid")

