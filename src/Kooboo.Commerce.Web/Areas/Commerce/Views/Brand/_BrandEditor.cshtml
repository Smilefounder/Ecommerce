@model BrandEditorModel

@using (Html.BeginForm("Save", "Brand", RouteValues.From(Request.QueryString)))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.Id)
    <div class="common-form">
        <table>
            @Html.EditorFor(m => m.Name)
            <tr>
                <th><label>@("Logo".Localize())</label></th>
                <td>
                    <img id="logoImg" src="@Model.Logo" style="display: @(string.IsNullOrEmpty(Model.Logo) ? "none" : "block")" data-owner="commerce" data-property="brand" />
                    <a href="javascript:;" class="upload" data-owner="commerce" data-property="brand" data-src="@Model.Logo">
                        @Html.IconImage("plus small")
                    </a>
                    <a id="btnRemove" href="javascript:;" onclick="RemoveImage();" style="display: @(string.IsNullOrEmpty(Model.Logo) ? "none" : "block")">
                        @Html.IconImage("minus small")
                    </a>
                    <input type="hidden" id="Logo" name="Logo" value="@Model.Logo" />
                </td>
            </tr>
            <tr>
                <th>
                    <label for="Description">
                        @("Description".Localize())
                    </label>
                </th>
                <td>
                    <textarea id="Description" name="Description" style="min-height: 100px;">@Model.Description</textarea>
                </td>
            </tr>
        </table>
    </div>
}

<script type="text/javascript">
    $(function () {
        $('.upload').upload({
            on_file_select: function (data) {
                $('#Logo').val(data.file.Url);
                $('#logoImg').attr('src', data.file.Url).show();
                $('#btnRemove').show();
            }
        });

        $('#logoImg').cropimage({
            keep_ratio: false,
            on_image_croped: function (data) {
                $(data.element).attr('src', data.url + '?v=' + new Date().getTime())
            }
        });
    })

    function RemoveImage() {
        $('#Logo').val('');
        $('#logoImg').attr('src', '').hide();
        $('#btnRemove').hide();
    }
</script>