@{
    var brands = ViewBag.Brands;
    var featuredProduct = ViewBag.FeaturedProduct;
    var accessories = ViewBag.Accessories;
}

<div style="font-size:16px;padding:10px;background:#eee;">
    <strong>Brands loaded from DataSource:</strong><br />
    <div style="padding-top:10px;line-height:1.7em;">
        @if (brands != null)
        {
            foreach (var brand in brands)
            {
                <span>
                    @brand.Name,
                </span>
            }
        }
    </div>
    <br />
    <br />
    <strong>Featured Product</strong>
    <div style="padding-top:10px;line-height:1.7em">
        @if (featuredProduct == null)
        {
            <span>Empty</span>
        }
        else
        {
            @featuredProduct.Name<br />
            <strong>Custom fields:</strong>
            <div>
                @if (featuredProduct.CustomFields != null)
                {
                    <ul>
                        @foreach (var field in featuredProduct.CustomFields)
                        {
                            <li>@field.FieldLabel = @field.FieldText (@(field.FieldValue))</li>
                        }
                    </ul>
                }
            </div>
            <strong>Variants:</strong>
            <div>
                @if (featuredProduct.Variants != null)
                {
                    foreach (var variant in featuredProduct.Variants)
                    {
                        <div>
                            <strong>SKU: @variant.Sku</strong>
                            <div>
                                @foreach (var field in variant.VariantFields)
                                {
                                    <div>@field.FieldLabel = @field.FieldText</div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        }
    </div>
    <br />
    <h4>Facets</h4>
    @foreach (var facet in ViewBag.ProductFacets)
    {
        <fieldset>
            <legend>@facet.FieldName</legend>
            <div>
                @foreach (var item in facet.Items)
                {
                    <a href="#">@item.Name (@item.Count)</a>
                }
            </div>
        </fieldset>
    }
</div>


