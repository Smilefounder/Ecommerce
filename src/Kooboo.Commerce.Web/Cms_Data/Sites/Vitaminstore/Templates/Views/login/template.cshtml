<div class="checkout">
    <ul class="checkout-nav">
        <li class="checkout-nav-item completed"><a href="ShoppingCart.aspx"><i class="icon-ok"></i>Uw Besteloverzicht</a></li>
        <li class="split through"><a></a></li>
        <li class="checkout-nav-item selected"><a>Uw persoonlijke gegevens</a></li>
        <li class="split"><a></a></li>
        <li class="checkout-nav-item"><a>Bestelling afronden en betalen</a></li>
    </ul>

    <div class="checkout-content checkout-login-new">
        <div class="checkout-login">
            <h2>Inloggen bij mijn <span class="gray">vitamin</span><span class="orange">store</span></h2>
            <p>Login met uw email adres en uw wachtwoord.</p>
            <form class="ajaxForm" action="@Url.FrontUrl().SubmissionUrl("CustomerLogin", new { returnUrl = ViewContext.RequestContext.GetRequestValue("returnUrl") })" method="post">
                @Html.AntiForgeryToken()
                <table>
                    <tbody>
                        <tr>
                            <td class="login-title">Uw Email Adres:</td>
                            <td>
                                <input class="" data-val="true" data-val-required="*" id="Email" name="Email" placeholder="Email"
                                       type="text" value="" autocomplete="off">
                                @Html.ValidationMessage("Email")
                            </td>
                        </tr>
                        <tr>
                            <td class="password login-title">Uw Wachtwoord:</td>
                            <td class="password">
                                <input class="" data-val="true" data-val-required="*" id="Password" name="Password" type="password" autocomplete="off">
                                @Html.ValidationMessage("Password")
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="login">
                                <input type="submit" value="inloggen" class="btn orange-btn" />
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="forgot"><a href="../PasswordForget.aspx">Wachtwoord vergeten?</a></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td align="center"></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
        <div class="checkout-new">
            <h2>Ik bestel voor de eerste keer bij <span class="gray">vitamin</span><span class="orange">store</span></h2>
            <p>
                <a href="@Url.FrontUrl().PageUrl("Register")" class="btn orange-btn">ga verder <i class="icon-chevron-right"></i></a>
            </p>
        </div>

        <div class="clear">&nbsp;</div>
    </div>
    <div class="clear">&nbsp;</div>
</div> 