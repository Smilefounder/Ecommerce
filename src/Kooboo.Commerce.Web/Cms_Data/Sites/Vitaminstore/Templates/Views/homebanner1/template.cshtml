@{
    var brands = ViewBag.Brands;
    var featuredProduct = ViewBag.FeaturedProduct;
    var accessories = ViewBag.Accessories;
}

<div style="font-size:16px;padding:10px;background:#eee;">
    <h4>Facets</h4>
    @if (ViewBag.ProductFacets != null) { 
        foreach (var facet in ViewBag.ProductFacets)
        {
            <div>
                <strong style="display:inline-block;min-width:100px;text-align:right">@facet.Name:</strong>
                <span>
                    @foreach (var value in facet.Values)
                    {
                        <a href="#" style="display:inline-block;margin-left:10px;">@value.Term (@value.Hits)</a>
                    }
                </span>
            </div>
        }
    }
    <br/><br/>
    <h4>Search results:</h4>
    @if (ViewBag.ProductIndexes != null)
    {
        <div>
            @foreach (var product in ViewBag.ProductIndexes)
            {
                <div style="padding: 10px;border:orange 1px solid;border-radius:5px;margin-top:10px;background:#fff;">
                    <div><a href="/product/@product.Id">@product.Name</a></div>
                    <div style="margin-top:5px">
                        <span style="color:orange">$@(product.MinPrice) - $@(product.MaxPrice)</span>
                    </div>
                    <div style="margin-top:5px">
                        @foreach (var field in product.VariantFieldValues)
                        {
                            <div style="margin-top:5px">
                                <span>@field.Key:</span>
                                <span>
                                    @foreach (var value in field.Value)
                                    {
                                        <span style="padding:0 5px; background:orange;display:inline-block;color:#fff;">@value</span>
                                    }
                                </span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>


