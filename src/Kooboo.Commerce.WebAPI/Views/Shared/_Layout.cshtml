<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="/Content/Site.css" />
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <a href="~/">Kooboo Commerce API</a></p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Instances", "Index", "ApiInfo", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("API", "AllAPI", "ApiInfo", new { area = "" }, null)</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body" class="main-content">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
